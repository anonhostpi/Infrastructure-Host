# Identity Configuration
# Copy to identity.config.yaml and fill in your values
# THIS FILE IS TRACKED IN GIT - identity.config.yaml IS NOT

# System credentials (created by cloud-init on first boot)
identity:
  username: admin
  password: yourpassword
  # SSH authorized keys (optional, one per line)
  # If omitted, use password authentication initially
  ssh_authorized_keys:
    - ssh-ed25519 AAAA... user@host

# Placeholder mapping for documentation:
# <USERNAME> = admin
# <PASSWORD_HASH> = (generated from password during build)
# <SSH_AUTHORIZED_KEY> = ssh-ed25519 AAAA...
