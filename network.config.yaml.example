# Internal Network Configuration
# Copy to network.config.yaml and fill in your values
# THIS FILE IS TRACKED IN GIT - network.config.yaml IS NOT

host:
  hostname: myserver
  ip_address: 192.168.1.100/24
  gateway: 192.168.1.1
  dns_servers:
    - 192.168.1.1   # Primary (local router/DNS)
    - 1.1.1.1       # Cloudflare
    - 8.8.8.8       # Google
  dns_search: local.lan

