# GitHub Copilot CLI Configuration (Optional)
# Copy to copilot_cli.config.yaml and fill in your values
# THIS FILE IS TRACKED IN GIT - copilot_cli.config.yaml IS NOT
#
# GitHub Copilot CLI is GitHub's official AI coding agent for terminal use.
# See: https://docs.github.com/en/copilot/github-copilot-in-the-cli
# Requires: Active GitHub Copilot subscription (Individual, Business, or Enterprise)

copilot_cli:
  # Whether to install Copilot CLI during cloud-init
  enabled: true

  # ==========================================================================
  # Authentication Configuration
  # ==========================================================================
  # Copilot CLI supports two authentication methods:
  #
  # 1. OAuth Copy (RECOMMENDED)
  #    Copy credentials from an already authenticated Copilot CLI instance.
  #    Source: ~/.copilot/config.json (copilot_tokens key)
  #    Note: Tokens are stored in OS credential store by default.
  #    Use Python keyring library to extract tokens to config.json.
  #
  # 2. GH_TOKEN Environment Variable (Fallback)
  #    Set GH_TOKEN environment variable with your OAuth token.
  #
  # Choose ONE method. OAuth in config.json is preferred.
  # ==========================================================================

  auth:
    # -------------------------------------------------------------------------
    # Option 1: OAuth from authenticated Copilot CLI (RECOMMENDED)
    # -------------------------------------------------------------------------
    # Copy these values from ~/.copilot/config.json on a machine where you've
    # already run `copilot` and `/login` and migrated tokens to config.json.
    #
    # oauth:
    #   github_username: "your-username"
    #   oauth_token: "gho_..."

    # -------------------------------------------------------------------------
    # Option 2: GH_TOKEN Environment Variable (Fallback)
    # -------------------------------------------------------------------------
    # Can also be set via: AUTOINSTALL_COPILOT_CLI_AUTH_GH_TOKEN env var
    gh_token: "gho_..."

  # ==========================================================================
  # Optional Settings
  # ==========================================================================
  # These settings are written to ~/.copilot/config.json

  settings:
    # Allow all paths without prompting (not recommended for shared systems)
    allow_all_paths: false

    # Allow all URLs without prompting (not recommended)
    allow_all_urls: false
