# VM Test Configuration
# Copy to vm.config.yaml and customize for your environment
# THIS FILE IS TRACKED IN GIT - vm.config.yaml IS NOT
#
# Find available networks: multipass networks

# ISO and Cloud-Init Builder VM (for building autoinstall ISO and cloud-init artifacts)
# Needs 40G+ for: source ISO (~3GB) + extracted contents (~3GB) + output ISO (~3GB)
builder:
  name: "autoinstall-builder"
  cpus: 2
  memory: "4G"
  disk: "40G"
  network: "Ethernet 1"

# Cloud-init Runner VM (tests generated cloud-init.yaml)
runner:
  name: "cloud-init-runner"
  cpus: 2
  memory: "4G"
  disk: "20G"
  network: "Ethernet 1"

# VirtualBox VM settings (for autoinstall ISO testing)
vbox:
  name: "ubuntu-autoinstall-test"
  memory: 4096
  cpus: 2
  disk_size: 40960  # MB (40GB for ZFS)

# Hyper-V VM settings (for autoinstall ISO testing)
hyperv:
  name: "ubuntu-autoinstall-test-hv"
  memory: 4096
  cpus: 2
  disk: 40960
  network: "Ethernet 1"